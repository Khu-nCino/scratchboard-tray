{
  "name": "scratchboard-tray",
  "version": "0.5.0",
  "license": "MIT",
  "author": {
    "name": "Gabriel Keith"
  },
  "description": "A electron based scratch org manager for your tray",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:mac": "yarn compile && electron-builder -m && node ./scripts/mac_rebuild.js",
    "dist:win": "yarn compile && electron-builder -w",
    "dist:linux": "yarn compile && electron-builder -l"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.10",
    "@types/node": "^12",
    "@types/react-dom": "^16.9.4",
    "@types/react-redux": "^7.1.5",
    "@types/react-transition-group": "^4.2.3",
    "electron": "^9.0.0",
    "electron-builder": "^22.3.3",
    "electron-notarize": "^1.0.0",
    "electron-webpack": "^2.7.4",
    "electron-webpack-ts": "^4.0.0",
    "prettier": "^2.0.2",
    "sass": "^1.26.9",
    "sass-loader": "^9.0.1",
    "typescript": "^3.8.3",
    "webpack": "~4.43.0"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.21.0",
    "@salesforce/core": "^2.4.1",
    "classnames": "^2.2.6",
    "electron-better-ipc": "^1.0.0",
    "electron-log": "^4.0.7",
    "electron-positioner": "^4.1.0",
    "electron-store": "^5.1.0",
    "electron-updater": "^4.2.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-transition-group": "^4.3.0",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "source-map-support": "^0.5.16"
  },
  "electronWebpack": {
    "title": "Scratchboard Tray",
    "whiteListedModules": [
      "react-redux"
    ],
    "main": {
      "webpackConfig": "webpack.additions.js"
    },
    "renderer": {
      "webpackConfig": "webpack.additions.js"
    }
  },
  "build": {
    "productName": "Scratchboard Tray",
    "artifactName": "${name}-${version}-${os}.${ext}",
    "afterSign": "./scripts/notarize.js",
    "mac": {
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "category": "public.app-category.productivity",
      "target": [
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "extraResources": [
      "./assets/**"
    ]
  }
}
